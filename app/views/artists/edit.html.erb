<h1>Edit Artist Info</h1>

<section>
  <article class="edit-form">
    <h1>Edit Artist's info:</h1>
    <p>
      <%= form_tag "/artists/#{@artist.id}", method: :post do %>
      <%= label_tag :name %>
      <%= text_field_tag :name, @artist.name%>
      <%= label_tag :image_path %>
      <%= text_field_tag :image_path, @artist.image_path %>

      <%= submit_tag "Update Artist" %> <%= button_to "Cancel", :back %>
      <% end %>
    </p>
  </article>
</section>
